; specific symbols
define dash-font
    vector
      #b00000000 ; -
      #b00000000
      #b00000000
      #b01111111
      #b00000000
      #b00000000
      #b00000000
      #b00000000
define apos-font
    vector
      #b00011000 ; '
      #b00011000
      #b00011000
      #b00000000
      #b00000000
      #b00000000
      #b00000000
      #b00000000
define space-font
  make-vector 8 #b00000000

define font-data(c)
  let
    $ n $ char->integer c
    cond
      {{ 64 < n } and { n <= { 64 + 26 }}}
        vector-ref uppercase { n - 64 - 1 }
      {{ 96 < n } and { n <= { 96 + 26 }}}
        vector-ref uppercase { n - 96 - 1 } ; use uppercase font for now
      {{ 48 <= n } and { n <= { 48 + 9 }}}
        vector-ref digit { n - 48 }
      { c char=? #\- }
        dash-font
      { c char=? #\' }
        apos-font
      #t
        space-font

